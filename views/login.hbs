{{!< layout}}

<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12">
    <h3 class='h2 mb-4 pt-6 overview-pets-login text-center'>¡Nos da gusto que regreses!</h3>
      <form action="/login" method="POST" id="form" class='text-center p-5'>
        <p class='h6 mb-4 form-text text-muted pl-4 pr-4'> Ingresa tu correo y contraseña para iniciar sesión y poder registrar a tu mascota</p>
        <br>
        <div class="form-group">
          <input type="text" name="email" placeholder="Correo Electrónico *">
        </div>
        <div class="form-group">
          <input type="password" name="password" placeholder="Contraseña *">
        </div>
        {{#if errorMessage }}
          <div class="error-message">{{ errorMessage }}</div>
        {{/if}}
        <div class="form-group">
          <button class="btn btn-info my-4 btn-block" type="submit">Login</button>
        </div>
        <p class="h6 account-message text-muted">No tienes una cuenta? <a href="/signup2">Regístrate</a></p>
      </form>
    </div>
</div>

